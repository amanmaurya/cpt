<% include ./user_header %>

<form id="map-attributes" class="map-form" method="POST" action="/users/map_attrs">
<div class="col-lg-12" style="background-color:#f4f4f6;">
  <center><h4>Select Attribute Columns</h4></center>
  
</div>
  <div class="col-md-12">
    <% var i=0 ; for( i = 0; i < Math.floor(headers.length/2); i++){%>
    <div class="col-md-6 attribute-checkbox"  >
      <input id='ch<%=i%>' type="checkbox" class='checkbox1' style="margin-left:30%" name="<%=headers[i]%>" value="<%=headers[i]%>"/><%=headers[i]%>
      <input id='in<%=i%>' class="hidden-attrs checkbox1" type="text" name="<%=headers[i]%>Input"/>
    </div>
    <%}%>
    <%for(var i = Math.floor(headers.length/2); i < Math.floor(headers.length); i++){%>
    <div class="col-md-6 attribute-checkbox" >
      <input id='ch<%=i%>' type="checkbox" class='checkbox1' style="margin-left:30%" name="<%=headers[i]%>" value="<%=headers[i]%>"/><%=headers[i]%>
      <input id='in<%=i%>' class="hidden-attrs checkbox1"  type="text" name="<%=headers[i]%>Input"/>
    </div>
    <%}%>
    <hr/>
  </div>
  <div class="col-lg-12" style="background-color:#f4f4f6;">
  <center><h4>Select Merchant Attribute Columns</h4></center>
  
</div>
  <div class="col-md-12">
   
    <% for(var j=i; j < (merchanthead.length+i); j++){ var a=merchant[0][merchanthead[j-i]]%>
    <div class="col-md-6 attribute-checkbox"  >
      <input id='ch<%=j%>' type="checkbox" class='checkbox2'  style="margin-left:30%" name="<%=merchanthead[j-i]%>_@" 
      value="<%=a%>"/><%=merchanthead[j-i]%>
      <input id='in<%=j%>' class="hidden-attrs checkbox2" type="text" name="<%=merchanthead[j-i]%>Input_@"/>
    </div>
    <%}%>

    <hr/>
  </div>
  <div class="col-lg-12" style="border-bottom:1px solid #e7e7e7;"></div>
  <div class="map-column-button">
    <button class="btn btn-primary" type="submit" id="map-attrs-submit-button" style="    margin-top: 12px;
    margin-bottom: 14px;
    width: 125px;
    background-color: #f4f4f6;
    color: #7e7e7e;
    border-color: #e7e7e7;">Submit</button>
  </div>
</form>
